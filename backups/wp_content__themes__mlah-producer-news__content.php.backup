<?php
/**
 * The template used for displaying page content in page.php
 *
 * @package ThemeGrill
 * @subpackage ColorMag
 * @since ColorMag 1.0
 */

?>

<article id="post-<?php the_ID(); ?>" <?php post_class('post'); ?>>
   <?php do_action( 'colormag_before_post_content' ); ?>

   <?php
       $category = get_the_category();
       $parentCategoryId = $category[count($category) - 1]->category_parent;
       $parentCategory = '';
       if($parentCategoryId){
           $parentCategory = get_category($parentCategoryId);
       }
   ?>

  <?php
   $attachments = get_attached_media();

   foreach ($attachments as $attachment) {
     $pdf_attachment_ids = array();

     if ($attachment->post_mime_type == 'application/pdf') {
       $pdf_attachment_ids[] = $attachment->ID;
     }
   }

   $most_recent_pdf = max($pdf_attachment_ids);
  ?>

   <?php if ( !in_category(metlife_get_alert_categories())) { ?>
      <div class="featured-image">
	  	<?php if ( has_post_thumbnail()) { ?>
        <?php if (get_post_type() == 'pdf') { ?>
           <a href="<?php echo wp_get_attachment_url($most_recent_pdf); ?>" title="<?php the_title(); ?>"><?php the_post_thumbnail( 'colormag-featured-image' ); ?></a>
        <?php } else { ?>
                 <a href="<?php the_permalink(); ?>" title="<?php the_title(); ?>"><?php the_post_thumbnail( 'colormag-featured-image' ); ?></a>
        <?php } ?>
      <?php } elseif (get_post_type() == 'pdf') { ?>
      <a href="<?php echo wp_get_attachment_url($most_recent_pdf); ?>" title="<?php the_title(); ?>"><img src="<?php echo get_stylesheet_directory() . '/images/PDF_icon.jpg' ?>" alt="<?php the_title(); ?>"></a>
      <?php } else { ?>
		 <a href="<?php the_permalink(); ?>" title="<?php the_title(); ?>"><img src="/wp-content/uploads/2016/03/widgets_normal_default.png"></a>
		<?php } ?>
	  </div>
   <?php } ?>

   <div class="article-content clearfix">

      <?php if( get_post_format() ) { get_template_part( 'inc/post-formats' ); } ?>

      <?php if ( !in_category(metlife_get_alert_categories()) || (in_category(metlife_get_alert_categories() && MetlifeCurrentUser::isRsm()) ) ) : ?>

          <?php $categories = get_the_category(); ?>
          <?php if (count($categories) > 1): ?>
              <?php colormag_colored_category(); ?>
          <?php endif; ?>
      <?php endif; ?>

      <header class="entry-header">
         <h1 class="entry-title">
          <?php if (get_post_type() == 'pdf') { ?>
            <a href="<?php echo wp_get_attachment_url($most_recent_pdf); ?>" title="<?php the_title_attribute();?>"><?php the_title(); ?></a>
          <?php } else { ?>
            <a href="<?php the_permalink(); ?>" title="<?php the_title_attribute();?>"><?php the_title(); ?></a>
          <?php } ?>
         </h1>
      </header>

      <?php custom_entry_meta_info('page'); ?>

      <div class="entry-content clearfix">
         <?php
		 //echo '<p>';
            the_excerpt();
		 //echo '</p>';
         ?>
        <?php if (get_post_type() == 'pdf') { ?>
         <a class="more-link" title="<?php the_title(); ?>" href="<?php echo wp_get_attachment_url($most_recent_pdf); ?>"><span><?php _e( 'Download', 'colormag' ); ?></span></a>
        <?php } else { ?>
         <a class="more-link" title="<?php the_title(); ?>" href="<?php the_permalink(); ?>"><span><?php _e( 'Read more', 'colormag' ); ?></span></a>
        <?php } ?>
      </div>

   </div>

   <?php do_action( 'colormag_after_post_content' ); ?>
</article>

